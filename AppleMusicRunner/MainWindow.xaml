<Window x:Class="AppleMusicProcessManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppleMusicProcessManager"
        mc:Ignorable="d"
        Title="Apple Music Process Manager (AMD-V2)" Height="720" Width="1280"
        Closing="MainWindow_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================================= -->
        <!-- MODIFIED: Top control bar for environment variable -->
        <!-- ============================================= -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="工作目录将从环境变量 'AMD-V2' 自动加载。" FontWeight="Bold"/>
                <TextBlock x:Name="DirectoryPathTextBlock" Text="正在检查环境变量..." FontStyle="Italic" Foreground="Gray" Margin="0,2,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="StartButton" Content="开始处理" Width="120" IsEnabled="False" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="终止" Width="80" IsEnabled="False" Margin="10,0,0,0" Background="#FFE81123"  Click="StopButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 日志显示区域 (Unchanged) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧日志: WrapperManager -->
            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top" Text="WrapperManager Log" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,5">
                    <StackPanel>
                        <TextBlock Text="Filter by Level:"/>
                        <WrapPanel Margin="0,5,0,5">
                            <CheckBox x:Name="WrapperShowInfo" Content="INFO" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="WrapperShowWarning" Content="WARNING" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="WrapperShowError" Content="ERROR" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="WrapperShowDebug" Content="DEBUG" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="WrapperShowOther" Content="Other" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                        </WrapPanel>
                        <TextBlock Text="Filter by Keyword:"/>
                        <TextBox x:Name="WrapperKeywordFilter" TextChanged="Filter_Changed_TextBox" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <RichTextBox x:Name="WrapperLogRtb" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas">
                    <FlowDocument/>
                </RichTextBox>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

            <!-- 右侧日志: AMD-V2 -->
            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Top" Text="AMD-V2 Log" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,5">
                    <StackPanel>
                        <TextBlock Text="Filter by Level:"/>
                        <WrapPanel Margin="0,5,0,5">
                            <CheckBox x:Name="AmdShowInfo" Content="INFO" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="AmdShowWarning" Content="WARNING" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="AmdShowError" Content="ERROR" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="AmdShowDebug" Content="DEBUG" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                            <CheckBox x:Name="AmdShowOther" Content="Other" IsChecked="True" Margin="0,0,10,0" Click="Filter_Changed"/>
                        </WrapPanel>
                        <TextBlock Text="Filter by Keyword:"/>
                        <TextBox x:Name="AmdKeywordFilter" TextChanged="Filter_Changed_TextBox" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <RichTextBox x:Name="AmdLogRtb" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas">
                    <FlowDocument/>
                </RichTextBox>
            </DockPanel>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Initializing..."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>